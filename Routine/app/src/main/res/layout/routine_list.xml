<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:orientation="vertical"
        app:cardCornerRadius="10dp"
        android:background="#0F3883"
        android:layout_margin="10dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:weightSum="100" android:paddingLeft="20dp" android:paddingRight="20dp" android:paddingTop="10dp"
            android:paddingBottom="10dp">
        <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/subjectTextView"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="18sp"/>
        <TextView
                android:text=""
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/infoTextView" android:textColor="@color/white"
                android:textSize="16sp" android:layout_marginTop="5dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
